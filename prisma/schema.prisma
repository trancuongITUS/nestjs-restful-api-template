// Prisma schema file for Authentication System
// Documentation: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  output   = "../node_modules/.prisma/client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ============================================================================
// AUTHENTICATION & USER MANAGEMENT
// ============================================================================

model User {
  id                String    @id @default(cuid())
  email             String    @unique
  username          String    @unique
  firstName         String    @map("first_name")
  lastName          String    @map("last_name")
  password          String
  isActive          Boolean   @default(true) @map("is_active")
  role              UserRole  @default(USER)
  emailVerified     Boolean   @default(false) @map("email_verified")
  emailVerifiedAt   DateTime? @map("email_verified_at")
  lastLoginAt       DateTime? @map("last_login_at")
  passwordChangedAt DateTime? @map("password_changed_at")

  // Brute-force protection
  failedLoginAttempts Int      @default(0) @map("failed_login_attempts")
  lastFailedLoginAt   DateTime? @map("last_failed_login_at")
  lockedUntil         DateTime? @map("locked_until")

  createdAt         DateTime  @default(now()) @map("created_at")
  updatedAt         DateTime  @updatedAt @map("updated_at")

  // Relations
  sessions UserSession[]

  @@map("users")
}

enum UserRole {
  ADMIN
  USER
}

model UserSession {
  id           String    @id @default(cuid())
  userId       String    @map("user_id")
  refreshToken String    @unique @map("refresh_token")
  expiresAt    DateTime  @map("expires_at")
  createdAt    DateTime  @default(now()) @map("created_at")
  revokedAt    DateTime? @map("revoked_at")
  userAgent    String?   @map("user_agent")
  ipAddress    String?   @map("ip_address")

  // Relations
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("user_sessions")
}

// ============================================================================
// AUDIT LOGGING
// ============================================================================

model AuditLog {
  id        String   @id @default(cuid())
  timestamp DateTime @default(now()) @db.Timestamptz

  // User context
  userId   String? @map("user_id")
  username String?
  userRole String? @map("user_role")

  // Request context
  action     AuditAction
  resource   AuditResource
  resourceId String?       @map("resource_id")
  method     String // HTTP method: POST, PUT, PATCH, DELETE
  endpoint   String // API endpoint path

  // Metadata
  ipAddress String? @map("ip_address")
  userAgent String? @map("user_agent")
  sessionId String? @map("session_id")
  requestId String? @map("request_id")

  // Change tracking (JSONB for flexibility)
  changesBefore Json? @map("changes_before")
  changesAfter  Json? @map("changes_after")
  metadata      Json? // Additional context

  // Compliance
  statusCode   Int     @map("status_code")
  errorMessage String? @map("error_message")

  // Audit trail
  createdAt DateTime @default(now()) @map("created_at")

  // Indexes for performance
  @@index([userId, timestamp])
  @@index([action, timestamp])
  @@index([resource, timestamp])
  @@index([timestamp])
  @@index([sessionId])
  @@map("audit_logs")
}

enum AuditAction {
  // Authentication
  LOGIN
  LOGOUT
  REFRESH_TOKEN
  CHANGE_PASSWORD
  REGISTER
  ACCOUNT_LOCKED
  LOCKED_ACCOUNT_LOGIN_ATTEMPT

  // CRUD
  CREATE
  READ
  UPDATE
  DELETE

  // Administrative
  ROLE_CHANGE
  PERMISSION_CHANGE
  USER_ACTIVATE
  USER_DEACTIVATE
  SESSION_REVOKE

  // System
  CONFIG_CHANGE
  SYSTEM_EVENT
}

enum AuditResource {
  USER
  USER_SESSION
  AUTH
  ROLE
  PERMISSION
  DEPARTMENT
  POSITION
  SALARY
  EMPLOYEE
  CONFIG
  SYSTEM
}
