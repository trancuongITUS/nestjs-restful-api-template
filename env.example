# =============================================================================
# ENVIRONMENT VARIABLES EXAMPLE
# =============================================================================
# Copy this file to .env and fill in your actual values.
# This file serves as a template and documentation for all environment variables.
# =============================================================================

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================

# Application Environment (development, production, test)
NODE_ENV=development

# Application Port
PORT=3000

# API Route Prefix
API_PREFIX=api/v1

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# Comma-separated list of allowed CORS origins
# Example: http://localhost:3000,http://localhost:3001,https://yourdomain.com
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:4200

# Maximum request body size (e.g., 10mb, 50mb, 1gb)
MAX_REQUEST_SIZE=10mb

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================

# Log level (error, warn, log, debug, verbose)
# Use 'debug' or 'verbose' in development, 'log' or 'warn' in production
LOG_LEVEL=log

# =============================================================================
# RATE LIMITING CONFIGURATION
# =============================================================================

# General throttle configuration (TTL in milliseconds)
THROTTLE_TTL=60000
THROTTLE_LIMIT=10

# Short-term rate limiting (high frequency, low limit)
RATE_LIMIT_SHORT_TTL=1000
RATE_LIMIT_SHORT_LIMIT=3

# Medium-term rate limiting (moderate frequency and limit)
RATE_LIMIT_MEDIUM_TTL=10000
RATE_LIMIT_MEDIUM_LIMIT=20

# Long-term rate limiting (low frequency, high limit)
RATE_LIMIT_LONG_TTL=60000
RATE_LIMIT_LONG_LIMIT=100

# =============================================================================
# PERFORMANCE CONFIGURATION
# =============================================================================

# Request timeout in milliseconds
REQUEST_TIMEOUT=30000

# Cache TTL in milliseconds
CACHE_TTL=300000

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# Database connection URL (required for Prisma)
# Format: postgresql://username:password@host:port/database?sslmode=require
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/db

# Optional individual database connection parameters
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_USERNAME=postgres
DATABASE_PASSWORD=postgres
DATABASE_NAME=db
DATABASE_SSL=false

# Database connection pool configuration
DATABASE_CONNECTION_LIMIT=10
DATABASE_POOL_TIMEOUT=20000

# Prisma-specific configuration (optional, for advanced use cases)
# PRISMA_QUERY_ENGINE_LIBRARY=
# PRISMA_QUERY_ENGINE_BINARY=

# =============================================================================
# JWT CONFIGURATION
# =============================================================================

# JWT access token secret key (minimum 32 characters for security)
# Generate strong keys using: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_ACCESS_SECRET=your-super-secret-access-key-at-least-32-characters-long

# JWT access token expiration (format: 15m, 1h, 1d, etc.)
JWT_ACCESS_EXPIRES_IN=15m

# JWT refresh token secret key (must be different from access secret)
JWT_REFRESH_SECRET=your-super-secret-refresh-key-at-least-32-characters-long

# JWT refresh token expiration
JWT_REFRESH_EXPIRES_IN=7d

# =============================================================================
# REDIS CONFIGURATION (Optional - for caching and session management)
# =============================================================================

# Redis host
REDIS_HOST=localhost

# Redis port
REDIS_PORT=6379

# Redis password (leave empty if no password)
REDIS_PASSWORD=

# Redis database number (0-15)
REDIS_DB=0

# =============================================================================
# EMAIL CONFIGURATION (Optional - for notifications and alerts)
# =============================================================================

# Email server host
# Examples: smtp.gmail.com, smtp.sendgrid.net, smtp.mailgun.org
EMAIL_HOST=smtp.gmail.com

# Email server port (587 for TLS, 465 for SSL, 25 for non-secure)
EMAIL_PORT=587

# Email server username
EMAIL_USER=your-email@gmail.com

# Email server password (use app password for Gmail)
EMAIL_PASSWORD=your-app-password

# Default sender email address
EMAIL_FROM=noreply@yourcompany.com

# =============================================================================
# FILE STORAGE CONFIGURATION
# =============================================================================

# File upload destination directory
UPLOAD_DEST=./uploads

# Maximum file upload size (format: 5mb, 10mb, 50mb)
MAX_FILE_SIZE=5mb

# Comma-separated list of allowed file MIME types
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf

